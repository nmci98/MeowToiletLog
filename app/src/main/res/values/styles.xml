<resources>

<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
<!--        TODO:テーマカラーの設定-->
        <item name="colorPrimary">@color/text_primary</item>
        <item name="colorPrimaryDark">@color/text_secondary</item>
        <item name="colorAccent">@color/secondary</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:background">@color/fill_white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_primary</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_title_jp</item>
    </style>

    <style name="BaseText">
        <item name="android:textSize">@dimen/text_size_text</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BaseText.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/text_size_text</item>
        <item name="android:textColor">@color/button_text_primary</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="BaseButton.Primary">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/selector_color_button_primary_text</item>
        <item name="backgroundTint">@color/selector_color_button_primary_background</item>
    </style>

    <style name="BaseButton.Secondary">
        <item name="android:textColor">@color/selector_color_button_secondary_text</item>
        <item name="strokeColor">@color/button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/selector_color_button_secondary_background</item>
    </style>

</resources>
